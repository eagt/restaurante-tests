<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @post.title %></h5>
    <p class="card-text"><%= @post.description %></p>
  </div>
</div>

<%= form_with(model: [@post, @comment], local: true) do |form| %>
  <div class="field">
    <%= form.label :message %>
    <%= form.text_area :message %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<div>
  <%= link_to "Back to posts", posts_path %>
</div>