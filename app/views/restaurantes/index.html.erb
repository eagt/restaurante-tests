<div data-controller='restaurantes' class='mb-5'>
  <div data-restaurantes-target='newForm' class='mt-5'>
    <h3>New Restaurante</h3>
    <%= form_with model: @restaurante, data: { action: 'restaurantes#submitForm' } do |form| %>
      <% if @restaurante.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@restaurante.errors.count, "error") %> prohibited this restaurante from being saved:</h2>
          <ul>
            <% @restaurante.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name %>
      </div>
      <div>
        <%= form.submit  %>
      </div>    
    <div>   
      <%= link_to "Cancel", restaurantes_path%>
    </div>
    <% end %>
  </div>
  <div class='mt-5'> 
    <a href="" data-action='click->restaurantes#openform' data-restaurantes-target='newLink'>New Restaurante</a>
  </div>  
</div>

<h1>Restaurantes</h1>
<div id="restaurantes">
  <% @restaurantes.each do |restaurante| %>
    <%= render restaurante %>
    <p>
      <%= link_to "Show this restaurante", restaurante %>
    </p>
  <% end %>
</div>
